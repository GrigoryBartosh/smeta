<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
              android:layout_gravity="bottom"
            android:padding="16dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="1"
            android:layout_gravity="center">

            <ImageButton
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:id="@+id/bedroom_button"
                android:src="@drawable/bedroom"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/room_bedroom"
                android:id="@+id/bedroom_text"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="1"
            android:layout_gravity="center">

            <ImageButton
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:id="@+id/bathroom_button"
                android:src="@drawable/bathroom"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/room_bathroom"
                android:id="@+id/bathroom_text"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="1"
            >

            <ImageButton
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:id="@+id/dining_room_button"
                android:src="@drawable/dining_room"
                android:layout_gravity="center"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/room_dining_room"
                android:id="@+id/dining_room_text"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:id="@+id/kitchen_button"
                android:src="@drawable/kitchen"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/room_kitchen"
                android:id="@+id/kitchen_text"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="1"
            android:layout_gravity="center"
            >

            <ImageButton
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:id="@+id/other_room_button"
                android:src="@android:drawable/ic_menu_help"
                android:layout_gravity="center"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/room_other_room"
                android:id="@+id/other_room_text"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
